{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "**/build",
    "**/coverage",
    "**/lib",
    "**/node_modules",
    "**/scripts",
    "**/webpack"
  ]
}

